{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": "build",
            "type": "shell",
            "command": "scons",
            "options":{
                "cwd": "${workspaceFolder}/godot",
            },
            "args": [
                "platform=windows",
                "custom_modules=../modules",
                "dev_build=yes",
            ],
            "problemMatcher":"$msCompile",
        }
    ]
}